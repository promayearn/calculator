<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.augmentis.ayp.calculator.CalculatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/gray"
            android:text="Input Number"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:text="Result"
            android:textColor="@color/Black"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@color/light_gray"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="7"
                android:textSize="44sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/num_8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="8"
                android:textSize="44sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/num_9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="9"
                android:textSize="44sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="+"
                android:textSize="44sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@color/light_gray"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="4"
                android:textSize="44sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/num_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="5"
                android:textSize="44sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/num_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="6"
                android:textSize="44sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="-"
                android:textSize="44sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@color/light_gray"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="1"
                android:textSize="44sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/num_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="2"
                android:textSize="44sp" />

            <Button
                android:id="@+id/num_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="3"
                android:textSize="44sp" />

            <Button
                android:id="@+id/multi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="*"
                android:textSize="44sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@color/light_gray"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="C"
                android:textSize="44sp" />

            <Button
                android:id="@+id/num_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="0"
                android:textSize="44sp" />

            <Button
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="="
                android:textSize="44sp" />

            <Button
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/light_gray"
                android:text="/"
                android:textSize="44sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

